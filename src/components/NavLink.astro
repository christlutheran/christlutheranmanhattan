---
interface Props {
  href: string;
  isActive: boolean;
  class?: string;
  target?: string;
}

const { href, isActive, class: className, target } = Astro.props;
---
<a 
  href={href}
  class:list={[
    "font-cinzel text-white/90 hover:text-liturgical-gold transition-colors tracking-wide text-sm py-2 inline-flex items-center",
    { "text-liturgical-gold font-medium": isActive },
    className
  ]}
  target={target || '_self'}
  rel={target === '_blank' ? 'noopener noreferrer' : undefined}
>
  <slot />
</a>