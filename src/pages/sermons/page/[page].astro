---
import { getCollection } from 'astro:content';
import PageLayout from '../../../layouts/PageLayout.astro';
import headerImage from '../../../assets/images/stained-glass.jpg';

function formatSermonDate(dateInput) {
  let date;
  if (dateInput instanceof Date) {
    date = dateInput;
  } else if (typeof dateInput === 'string') {
    const [year, month, day] = dateInput.split('-').map(Number);
    date = new Date(Date.UTC(year, month - 1, day));
  } else {
    return '';
  }
  const daySuffix = (d) => {
    if (d > 3 && d < 21) return 'th';
    switch (d % 10) {
      case 1: return 'st';
      case 2: return 'nd';
      case 3: return 'rd';
      default: return 'th';
    }
  };
  return date.toLocaleDateString('en-US', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    timeZone: 'UTC',
  }).replace(/(\d{1,2})(,)/, (m, d, c) => `${d}${daySuffix(Number(d))}${c}`);
}

export async function getStaticPaths() {
  const pageSize = 5; // ensure defined in scope
  const sermons = await getCollection('sermons');
  const totalPages = Math.ceil(sermons.length / pageSize);
  return Array.from({ length: Math.max(0, totalPages - 1) }, (_, i) => ({ params: { page: String(i + 2) } }));
}

const PAGE_SIZE = 5; // runtime constant
const sermons = await getCollection('sermons');
const sortedSermons = sermons.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
const totalPages = Math.ceil(sortedSermons.length / PAGE_SIZE);
const currentPage = Number(Astro.params.page);
if (Number.isNaN(currentPage) || currentPage < 2 || currentPage > totalPages) {
  throw new Error('Page not found');
}
const paginatedSermons = sortedSermons.slice((currentPage - 1) * PAGE_SIZE, currentPage * PAGE_SIZE);

const siteUrl = Astro.site ? Astro.site.toString().replace(/\/$/, '') : '';
const canonicalUrl = siteUrl ? `${siteUrl}/sermons/page/${currentPage}/` : undefined;
const metaDescription = `Page ${currentPage} of sermons from Christ Lutheran Church, Manhattan, KS.`;
const prevUrl = currentPage > 2 ? `/sermons/page/${currentPage - 1}/` : currentPage === 2 ? '/sermons/' : undefined;
const nextUrl = currentPage < totalPages ? `/sermons/page/${currentPage + 1}/` : undefined;
---
<PageLayout title={`Sermons (Page ${currentPage})`} image={headerImage}>
  <Fragment slot="head">
    <meta name="description" content={metaDescription} />
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
    {prevUrl && <link rel="prev" href={prevUrl} />}
    {nextUrl && <link rel="next" href={nextUrl} />}
    <meta property="og:title" content={`Sermons (Page ${currentPage}) | Christ Lutheran Church Manhattan KS`} />
    <meta property="og:description" content={metaDescription} />
    <meta name="robots" content="index, follow" />
    <script type="application/ld+json">{JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'CollectionPage',
      name: `Sermons (Page ${currentPage})`,
      description: metaDescription,
      url: canonicalUrl,
      mainEntity: paginatedSermons.map(sermon => ({
        '@type': 'Sermon',
        name: sermon.data.title,
        datePublished: sermon.data.date,
        author: sermon.data.pastor,
        about: sermon.data.theme || undefined,
        url: `${siteUrl}/sermons/${sermon.data.slug}/`
      }))
    })}</script>
    <script type="application/ld+json">{JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'BreadcrumbList',
      itemListElement: [
        { '@type': 'ListItem', position: 1, item: { '@id': `${siteUrl}/`, name: 'Home' } },
        { '@type': 'ListItem', position: 2, item: { '@id': `${siteUrl}/sermons/`, name: 'Sermons' } },
        { '@type': 'ListItem', position: 3, item: { '@id': canonicalUrl, name: `Page ${currentPage}` } }
      ]
    })}</script>
  </Fragment>
  <section class="py-16 bg-white text-liturgical-black">
    <div class="container mx-auto px-4">
      <nav class="flex justify-between items-center mb-6" aria-label="Pagination Top">
        <a href={prevUrl} class={`pag-ctrl ${!prevUrl ? 'disabled' : ''}`} aria-disabled={!prevUrl}>← Prev</a>
        <div class="text-sm font-cinzel">Page {currentPage} of {totalPages}</div>
        <a href={nextUrl} class={`pag-ctrl ${!nextUrl ? 'disabled' : ''}`} aria-disabled={!nextUrl}>Next →</a>
      </nav>
  <div class="sermon-list-modern">
        {paginatedSermons.map(sermon => (
          <a href={`/sermons/${sermon.data.slug}/`} class="sermon-row group">
            <span class="sermon-row-thumb">
              <img src="/logo_sm.jpg" alt="Sermon Podcast Cover" class="sermon-row-img" />
            </span>
            <span class="sermon-row-content">
              <span class="sermon-row-title">{sermon.data.title}</span>
              <span class="sermon-row-meta">
                <span>{formatSermonDate(sermon.data.date)}</span>
                <span>•</span>
                <span>{sermon.data.pastor}</span>
              </span>
              {sermon.data.theme && (
                <span class="sermon-row-theme">{sermon.data.theme}</span>
              )}
              {sermon.data.scripture && (
                <span class="sermon-row-scripture">{sermon.data.scripture}</span>
              )}
            </span>
            <span class="sermon-row-arrow">▶</span>
          </a>
        ))}
      </div>
  <nav class="flex justify-center gap-2 mt-4 mb-8" aria-label="Pagination">
        {Array.from({ length: totalPages }, (_, i) => {
          const pageNum = i + 1;
            const isActive = currentPage === pageNum;
            return (
              <a href={pageNum === 1 ? '/sermons/' : `/sermons/page/${pageNum}/`} class={`sermon-pagination-btn${isActive ? ' active' : ''}`} aria-current={isActive ? 'page' : undefined}>{pageNum}</a>
            );
        })}
      </nav>
      <nav class="flex justify-between items-center mt-2" aria-label="Pagination Bottom">
        <a href={prevUrl} class={`pag-ctrl ${!prevUrl ? 'disabled' : ''}`} aria-disabled={!prevUrl}>← Prev</a>
        <a href={nextUrl} class={`pag-ctrl ${!nextUrl ? 'disabled' : ''}`} aria-disabled={!nextUrl}>Next →</a>
      </nav>

      <div class="flex flex-col items-center mt-12">
        <div class="font-cinzel text-lg text-liturgical-black mb-2">Listen On</div>
        <div class="flex flex-wrap gap-4 justify-center listen-on-icons">
          <a href="https://podcasts.apple.com/us/podcast/christ-lutheran-church-manhattan-ks/id1820822361" target="_blank" rel="noopener" title="Apple Podcasts">
            <img src="/apple.svg" alt="Apple Podcasts" class="w-8 h-8" />
          </a>
          <a href="https://music.amazon.com/podcasts/92f71b50-b4ba-4e71-b727-e4fe1ca4c5ac" target="_blank" rel="noopener" title="Amazon Music">
            <img src="/amazonmusic.svg" alt="Amazon Music" class="w-8 h-8" />
          </a>
          <a href="https://christlutheranmanhattan.podbean.com/" target="_blank" rel="noopener" title="Podbean">
            <img src="/podbean.svg" alt="Podbean" class="w-8 h-8" />
          </a>
          <a href="https://open.spotify.com/show/6BvV5xhO1bsqMRKgOHchbv" target="_blank" rel="noopener" title="Spotify">
            <img src="/spotify.svg" alt="Spotify" class="w-8 h-8" />
          </a>
          <a href="https://www.youtube.com/@ChristLutheranManhattan" target="_blank" rel="noopener" title="YouTube">
            <img src="/youtube.svg" alt="YouTube" class="w-8 h-8" />
          </a>
          <a href="https://feed.podbean.com/christlutheranmanhattan/feed.xml" target="_blank" rel="noopener" title="RSS">
            <img src="/rss.svg" alt="RSS" class="w-8 h-8" />
          </a>
        </div>
      </div>
    </div>
  </section>
  <style>
    /* Reuse styles (duplicated from main sermons page) */
  .sermon-list-modern { display:flex; flex-direction:column; gap:0.5rem; width:100%; align-items:stretch; margin-bottom:1.75rem; }
    .sermon-row { display:grid; grid-template-columns:3.2rem 1fr auto; align-items:center; gap:1.1rem; width:100%; background:none; border-bottom:1px solid #ececec; padding:0.7rem 0.2rem 0.7rem 0; text-decoration:none; transition:background .15s; cursor:pointer; position:relative; min-width:0; }
    .sermon-row:last-child { border-bottom:none; }
    .sermon-row:hover,.sermon-row:focus { background:#f9f6f2; }
    .sermon-row-thumb { width:3.2rem; height:3.2rem; border-radius:.7rem; overflow:hidden; background:#f3f4f6; flex-shrink:0; display:flex; align-items:center; justify-content:center; box-shadow:0 1px 4px 0 rgba(185,28,28,0.04); border:1.5px solid #e5e7eb; }
    .sermon-row-img { width:100%; height:100%; object-fit:cover; border-radius:.7rem; display:block; }
    .sermon-row-content { min-width:0; display:flex; flex-direction:column; gap:.1rem; overflow:hidden; }
    .sermon-row-title { font-family:'Cinzel',serif; font-size:1.08rem; font-weight:700; color:#b91c1c; line-height:1.25; word-break:break-word; white-space:normal; letter-spacing:.01em; text-overflow:ellipsis; overflow:hidden; max-width:100%; display:block; }
    .sermon-row-meta { display:flex; flex-wrap:wrap; gap:.5rem; font-size:.97rem; color:#222; font-family:'Crimson Text',serif; opacity:.85; align-items:center; }
    .sermon-row-theme { color:#bfa14a; font-weight:600; font-size:.95rem; font-family:'Crimson Text',serif; margin-top:.05rem; }
    .sermon-row-scripture { color:#222; font-weight:400; font-size:.95rem; font-family:'Crimson Text',serif; margin-top:.05rem; }
    .sermon-row-arrow { color:#b91c1c; font-size:1.5rem; margin-left:.5rem; opacity:.7; transition:opacity .18s, transform .18s; flex-shrink:0; font-family:inherit; display:flex; align-items:center; }
    .sermon-row:hover .sermon-row-arrow,.sermon-row:focus .sermon-row-arrow { opacity:1; transform:scale(1.12); }
    @media (max-width:640px){ .sermon-row { grid-template-columns:2.2rem 1fr 1.1rem; gap:.5rem; padding:.5rem .1rem .5rem 0; } .sermon-row-thumb { width:2.2rem; height:2.2rem; border-radius:.4rem; } .sermon-row-img { border-radius:.4rem; } .sermon-row-title { font-size:.98rem; } .sermon-row-meta, .sermon-row-theme, .sermon-row-scripture { font-size:.8rem; } .sermon-row-arrow { font-size:1.1rem; margin-left:.2rem; } }
    .sermon-pagination-btn { @apply px-3 py-1 rounded font-cinzel border border-liturgical-red/30 bg-white text-liturgical-red hover:bg-liturgical-cream transition-colors text-base font-semibold shadow-sm; text-decoration:none; min-width:2.2rem; text-align:center; margin:0 .12rem; transition:background .2s, color .2s, border-color .2s; }
    .sermon-pagination-btn.active { @apply bg-liturgical-red text-white border-liturgical-red shadow-md; font-weight:700; pointer-events:none; }
    .listen-on-icons a { border:none !important; background:none !important; box-shadow:none !important; text-decoration:none !important; padding:0 !important; margin:0 !important; display:inline-block; }
    .listen-on-icons a:focus { outline:2px solid #b91c1c; outline-offset:2px; }
    .listen-on-icons img { border:none !important; background:none !important; box-shadow:none !important; padding:0 !important; margin:0 !important; display:inline-block; }
    .pag-ctrl { @apply font-cinzel text-sm md:text-base text-liturgical-red hover:underline transition-colors; }
    .pag-ctrl.disabled { @apply text-gray-400 pointer-events-none no-underline; }
  </style>
</PageLayout>
