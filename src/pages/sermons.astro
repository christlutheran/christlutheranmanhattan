---
import { getCollection } from 'astro:content';
import PageLayout from '../layouts/PageLayout.astro';

function formatSermonDate(dateInput) {
  let date;
  if (dateInput instanceof Date) {
    date = dateInput;
  } else if (typeof dateInput === 'string') {
    // Parse as UTC
    const [year, month, day] = dateInput.split('-').map(Number);
    date = new Date(Date.UTC(year, month - 1, day));
  } else {
    return '';
  }
  const dayNum = date.getUTCDate();
  const daySuffix = (d) => {
    if (d > 3 && d < 21) return 'th';
    switch (d % 10) {
      case 1: return 'st';
      case 2: return 'nd';
      case 3: return 'rd';
      default: return 'th';
    }
  };
  return date.toLocaleDateString('en-US', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    timeZone: 'UTC',
  }).replace(/(\d{1,2})(,)/, (m, d, c) => `${d}${daySuffix(Number(d))}${c}`);
}

const sermons = await getCollection('sermons');
const sortedSermons = sermons.sort((a, b) => {
  const dateA = new Date(a.data.date).getTime();
  const dateB = new Date(b.data.date).getTime();
  return dateB - dateA;
});

const pageSize = 10;
const totalPages = Math.ceil(sortedSermons.length / pageSize);
const page = Number(Astro.url.searchParams.get('page') || 1);
const paginatedSermons = sortedSermons.slice((page - 1) * pageSize, page * pageSize);

const siteUrl = Astro.site ? Astro.site.toString() : '';
const canonicalUrl = siteUrl ? `${siteUrl}/sermons${page > 1 ? `?page=${page}` : ''}` : undefined;
const metaDescription = 'Listen to and read sermons from Christ Lutheran Church, Manhattan, KS. Explore our archive of Gospel-centered preaching.';
---
<PageLayout title="Sermons">
  <Fragment slot="head">
    <meta name="description" content={metaDescription} />
    <meta property="og:title" content="Sermons | Christ Lutheran Church Manhattan KS" />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:type" content="website" />
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
    <meta name="robots" content="index, follow" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Sermons | Christ Lutheran Church Manhattan KS" />
    <meta name="twitter:description" content={metaDescription} />
    <script type="application/ld+json">{JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'CollectionPage',
      name: 'Sermons',
      description: metaDescription,
      url: canonicalUrl,
      mainEntity: paginatedSermons.map(sermon => ({
        '@type': 'CreativeWork',
        name: sermon.data.title,
        url: `${siteUrl}/sermons/${sermon.data.slug}/`,
        datePublished: sermon.data.date instanceof Date ? sermon.data.date.toISOString().split('T')[0] : sermon.data.date,
        author: sermon.data.preacher || sermon.data.pastor || 'Unknown',
        about: sermon.data.series || undefined,
      }))
    })}</script>
  </Fragment>
  <section class="py-16 bg-white text-liturgical-black">
    <div class="container mx-auto px-4">
      
      <div class="sermon-list">
        {paginatedSermons.map(sermon => (
          <a href={`/sermons/${sermon.data.slug}/`} class="sermon-modern-card" tabindex="0">
            <div class="sermon-modern-card-img-wrap">
              <img src="/logo_sm.jpg" alt="Sermon Thumbnail" class="sermon-modern-card-img" />
            </div>
            <div class="sermon-modern-card-content">
              <div class="sermon-modern-title">{sermon.data.title}</div>
              <div class="sermon-modern-meta">
                <span>{formatSermonDate(sermon.data.date)}</span>
                <span>•</span>
                <span>{sermon.data.pastor}</span>
              </div>
              {(sermon.data.series || sermon.data.scripture) && (
                <div class="sermon-modern-extra">
                  {sermon.data.series && <span class="sermon-modern-series">{sermon.data.series}</span>}
                  {sermon.data.series && sermon.data.scripture && <span class="mx-2">|</span>}
                  {sermon.data.scripture && <span class="sermon-modern-scripture">{sermon.data.scripture}</span>}
                </div>
              )}
            </div>
            <span class="sermon-modern-arrow">→</span>
          </a>
        ))}
      </div>

      

      <div class="flex justify-center gap-2 mt-8 mb-10">
        {Array.from({ length: totalPages }, (_, i) => {
          const pageNum = i + 1;
          const isActive = page === pageNum;
          return (
            <a
              href={pageNum === 1 ? '/sermons' : `/sermons?page=${pageNum}`}
              class={`sermon-pagination-btn${isActive ? ' active' : ''}`}
              rel={isActive ? 'nofollow' : undefined}
              aria-current={isActive ? 'page' : undefined}
            >
              {pageNum}
            </a>
          );
        })}
      </div>

      <div class="flex flex-col items-center">
        <div class="font-cinzel text-lg text-liturgical-black mb-2">Listen On</div>
        <div class="flex flex-wrap gap-4 justify-center listen-on-icons">
          <a href="https://podcasts.apple.com/us/podcast/christ-lutheran-church-manhattan-ks/id1820822361" target="_blank" rel="noopener" title="Apple Podcasts">
            <img src="/apple.svg" alt="Apple Podcasts" class="w-8 h-8" />
          </a>
          <a href="https://music.amazon.com/podcasts/92f71b50-b4ba-4e71-b727-e4fe1ca4c5ac" target="_blank" rel="noopener" title="Amazon Music">
            <img src="/amazonmusic.svg" alt="Amazon Music" class="w-8 h-8" />
          </a>
          <a href="https://christlutheranmanhattan.podbean.com/" target="_blank" rel="noopener" title="Podbean">
            <img src="/podbean.svg" alt="Podbean" class="w-8 h-8" />
          </a>
          <a href="https://open.spotify.com/show/6BvV5xhO1bsqMRKgOHchbv" target="_blank" rel="noopener" title="Spotify">
            <img src="/spotify.svg" alt="YouTube" class="w-8 h-8" />
          </a>
          <a href="https://www.youtube.com/@ChristLutheranManhattan" target="_blank" rel="noopener" title="YouTube">
            <img src="/youtube.svg" alt="YouTube" class="w-8 h-8" />
          </a>
          <a href="https://feed.podbean.com/christlutheranmanhattan/feed.xml" target="_blank" rel="noopener" title="RSS">
            <img src="/rss.svg" alt="RSS" class="w-8 h-8" />
          </a>
        </div>
      </div>
    </div>
  </section>
  <style>
    /* Prevent global link styles from affecting Listen On icon links */
    .listen-on-icons a {
      border: none !important;
      background: none !important;
      box-shadow: none !important;
      text-decoration: none !important;
      padding: 0 !important;
      margin: 0 !important;
      display: inline-block;
    }
    .listen-on-icons a:focus {
      outline: 2px solid #b91c1c;
      outline-offset: 2px;
    }
    .listen-on-icons img {
      border: none !important;
      background: none !important;
      box-shadow: none !important;
      padding: 0 !important;
      margin: 0 !important;
      display: inline-block;
    }
    .sermon-list {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      width: 100%;
      align-items: center;
      margin-bottom: 3rem;
    }
    .sermon-modern-card {
      display: grid;
      grid-template-columns: auto 1fr auto;
      align-items: center;
      gap: 1.25rem;
      width: 100%;
      max-width: 600px;
      background: var(--color-liturgical-cream, #f9f6f2);
      border: 2px solid var(--color-liturgical-red, #b91c1c20);
      border-radius: 1.25rem;
      box-shadow: 0 2px 12px 0 rgba(185,28,28,0.04);
      padding: 1.25rem 1.5rem;
      text-decoration: none;
      position: relative;
      transition: box-shadow 0.18s, border-color 0.18s, background 0.18s;
      cursor: pointer;
    }
    .sermon-modern-card:focus-visible {
      border-color: #b91c1c;
      box-shadow: 0 0 0 3px #b91c1c33, 0 2px 12px 0 rgba(185,28,28,0.08);
      outline: none;
    }
    .sermon-modern-card:hover, .sermon-modern-card:focus {
      background: linear-gradient(90deg, #fff7f7 0%, #fbeee6 100%);
      border-color: #b91c1c;
      box-shadow: 0 6px 32px 0 rgba(185,28,28,0.10), 0 1.5px 6px 0 rgba(0,0,0,0.04);
    }
    .sermon-modern-card-img-wrap {
      width: 5rem;
      height: 5rem;
      background: #fff;
      border-radius: 0.75rem;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 1.5px solid var(--color-liturgical-red, #b91c1c20);
      box-shadow: 0 1px 4px 0 rgba(185,28,28,0.04);
      flex-shrink: 0;
      transition: border-color 0.18s;
    }
    .sermon-modern-card-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 0.65rem;
      display: block;
    }
    @media (max-width: 640px) {
      .sermon-modern-card {
        grid-template-columns: 3.5rem 1fr 1.2rem;
        padding: 0.85rem 0.7rem;
        gap: 0.7rem;
      }
      .sermon-modern-card-img-wrap {
        width: 3.5rem;
        height: 3.5rem;
        border-radius: 0.5rem;
      }
      .sermon-modern-card-img {
        border-radius: 0.45rem;
      }
      .sermon-modern-title {
        font-size: 1rem;
      }
      .sermon-modern-meta, .sermon-modern-extra {
        font-size: 0.85rem;
      }
      .sermon-modern-arrow {
        font-size: 1.2rem;
        right: 0.7rem;
      }
    }
    .sermon-modern-title {
      font-family: 'Cinzel', serif;
      font-size: 1.1rem;
      font-weight: 700;
      color: var(--color-liturgical-red, #b91c1c);
      line-height: 1.25;
      margin-bottom: 0.1rem;
      word-break: break-word;
      white-space: normal;
      letter-spacing: 0.01em;
      text-overflow: ellipsis;
      overflow: hidden;
      max-width: 100%;
    }
    .sermon-modern-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      font-size: 0.98rem;
      color: var(--color-liturgical-black, #222);
      font-family: 'Crimson Text', serif;
      opacity: 0.85;
      align-items: center;
    }
    .sermon-modern-meta span {
      white-space: nowrap;
    }
    .sermon-modern-extra {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      font-size: 0.92rem;
      color: var(--color-liturgical-gold, #bfa14a);
      font-family: 'Crimson Text', serif;
      opacity: 0.85;
      align-items: center;
    }
    .sermon-modern-series {
      color: var(--color-liturgical-gold, #bfa14a);
      font-weight: 600;
    }
    .sermon-modern-scripture {
      color: var(--color-liturgical-black, #222);
      font-weight: 400;
    }
    .sermon-modern-arrow {
      color: var(--color-liturgical-red, #b91c1c);
      font-family: 'Cinzel', serif;
      font-size: 1.7rem;
      margin-left: 0.5rem;
      opacity: 0;
      transition: opacity 0.18s;
      position: absolute;
      right: 1.5rem;
      top: 50%;
      transform: translateY(-50%);
      pointer-events: none;
    }
    .sermon-modern-card:hover .sermon-modern-arrow,
    .sermon-modern-card:focus .sermon-modern-arrow {
      opacity: 1;
    }
    .sermon-card:focus {
      outline: none;
    }
    .sermon-pagination-btn {
      @apply px-3 py-1 rounded font-cinzel border border-liturgical-red/30 bg-white text-liturgical-red hover:bg-liturgical-cream transition-colors text-base font-semibold shadow-sm;
      text-decoration: none;
      min-width: 2.2rem;
      text-align: center;
      margin: 0 0.12rem;
      transition: background 0.2s, color 0.2s, border-color 0.2s;
    }
    .sermon-pagination-btn.active {
      @apply bg-liturgical-red text-white border-liturgical-red shadow-md;
      font-weight: 700;
      pointer-events: none;
    }
    .sermon-pagination-btn:focus {
      outline: 2px solid #b91c1c;
      outline-offset: 2px;
    }
  </style>
</PageLayout>
